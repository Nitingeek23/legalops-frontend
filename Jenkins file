pipeline {
    agent any

    environment {
        // Set environment variables if needed
        NODE_HOME = '/usr/local/node' // Adjust this path to where Node.js is installed
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout code from Git repository using credentials
                git credentialsId: 'github-PAT', url: 'https://github.com/Nitingeek23/legalops-frontend.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                // Install dependencies
                sh 'npm install'
            }
        }

        stage('Build') {
            steps {
                // Build the project
                sh 'npm run build'
            }
        }

        stage('Test') {
            steps {
                // Run tests
                sh 'npm run test'
            }
        }

        stage('Deploy') {
            steps {
                // Deployment steps
                echo 'Deploying the application...'
            }
        }
    }

    post {
        always {
            // Actions to perform after pipeline completion
            echo 'Pipeline completed.'
        }
    }
}
