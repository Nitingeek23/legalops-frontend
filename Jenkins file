pipeline {
    agent any

    environment {
        // Define environment variables if needed
        NODE_ENV = 'production'
        NPM_PATH = '/root/.nvm/versions/node/v20.16.0/bin/npm'
        NODE_PATH = '/root/.nvm/versions/node/v20.16.0/bin/node'
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from GitHub
                git url: 'https://github.com/Nitingeek23/legalops-frontend.git', branch: 'main', credentialsId: 'github-PAT'
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    // Install dependencies using npm
                    sh "${env.NPM_PATH} install"
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    // Build the Vue.js project
                    sh "${env.NPM_PATH} run build"  // Or adjust if using Yarn
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Deploy the build artifacts to your server
                    // This example assumes you're deploying to a directory on the server
                    sh '''
                        scp -r dist/* user@your-server:/path/to/deploy/directory/
                    '''
                }
            }
        }
    }

    post {
        success {
            echo 'Build and deployment successful!'
        }
        failure {
            echo 'Build or deployment failed.'
        }
    }
}
